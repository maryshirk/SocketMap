<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="app_style"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="main_text"
        parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/oxygen_regular</item>
    </style>

    <style name="collapsed_title"
        parent="@android:style/TextAppearance">
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/oxygen_bold</item>
    </style>

    <style name="title"
        parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/oxygen_regular</item>
    </style>

    <style name="main"
        parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/oxygen_regular</item>
    </style>

    <style name="name"
        parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/oxygen_bold</item>
    </style>

    <style name="MyRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/green_main</item>
        <item name="colorControlActivated">@color/green_main</item>
    </style>

</resources>