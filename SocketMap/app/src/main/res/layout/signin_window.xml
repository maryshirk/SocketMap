<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:cardElevation="10dp">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="24dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Вход"
            android:textAppearance="@style/collapsed_title"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:id="@+id/head_signin"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Войдите в учетную запись."
            android:textAppearance="@style/title"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:id="@+id/welcome_reg"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_margin="14dp"
            android:weightSum="2">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="52dp"
                android:src="@drawable/icon"
                android:tint="@color/green_main" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="252dp"
                android:layout_height="47dp"
                android:id="@+id/email_field"
                android:hint="@string/email"
                android:background="@drawable/card"
                android:inputType="textEmailAddress"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/gray_text"
                android:textSize="16sp"/>

            <!--                app:met_floatingLabel="normal"-->
            <!--                app:met_singleLineEllipsis="true"-->
            <!--                app:met_baseColor="@color/black"-->
            <!--                app:met_primaryColor="@color/gray_text"-->
            <!--                app:met_minCharacters="2"-->
            <!--                app:met_maxCharacters="50"-->


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_margin="14dp"
            android:weightSum="2">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="52dp"
                android:src="@drawable/icon"
                android:tint="@color/green_main" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="252dp"
                android:layout_height="47dp"
                android:id="@+id/password_field"
                android:hint="@string/pass"
                android:background="@drawable/card"
                android:inputType="textPassword"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/gray_text"
                android:textSize="16sp" />

            <!--                app:met_floatingLabel="normal"-->
            <!--                app:met_singleLineEllipsis="true"-->
            <!--                app:met_baseColor="@color/black"-->
            <!--                app:met_primaryColor="@color/gray_text"-->
            <!--                app:met_minCharacters="4"-->
            <!--                app:met_maxCharacters="50"-->


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>