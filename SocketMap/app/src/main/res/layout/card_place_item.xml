<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@drawable/card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_address_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"
            android:text="Адрес"
            android:textColor="@color/green_heading"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_description_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="8dp"
            android:text="Описание"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <RatingBar
            android:layout_marginLeft="24dp"
            style="?android:attr/ratingBarStyleSmall"
            android:id="@+id/ratingBarItem"
            android:layout_marginRight="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="12dp"
            android:weightSum="2">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Количество отзывов: "
                android:textAppearance="@style/main"
                android:textAlignment="center"
                android:textColor="@color/gray_text"
                android:layout_marginTop="10dp"
                android:id="@+id/feedback_count"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="1"
                android:textAppearance="@style/main"
                android:textAlignment="center"
                android:textColor="@color/gray_text"
                android:layout_marginTop="10dp"
                android:id="@+id/rating_count"
                />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>